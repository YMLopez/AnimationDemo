<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 菜单 -->
    <android.support.v7.widget.CardView
        android:id="@+id/cv_coin_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        app:cardBackgroundColor="#00B656"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/iv_coin_menu"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_coin_menu" />

    </android.support.v7.widget.CardView>

    <!-- 扫一扫 -->
    <android.support.v7.widget.CardView
        android:id="@+id/cv_menu_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:visibility="gone"
        app:cardBackgroundColor="#181818"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/iv_menu_scan"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_coin_scan" />

    </android.support.v7.widget.CardView>

    <!-- 接收 -->
    <android.support.v7.widget.CardView
        android:id="@+id/cv_menu_receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:visibility="gone"
        app:cardBackgroundColor="#181818"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/iv_menu_receive"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_coin_receive" />

    </android.support.v7.widget.CardView>

    <!-- 更新 -->
    <android.support.v7.widget.CardView
        android:id="@+id/cv_menu_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:visibility="gone"
        app:cardBackgroundColor="#181818"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/iv_menu_update"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_coin_update" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="263dp"
        android:layout_marginEnd="90dp"
        android:gravity="center"
        android:text="扫一扫"
        android:textColor="#181818"
        android:textSize="10sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/cv_coin_menu"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="183dp"
        android:layout_marginEnd="90dp"
        android:gravity="center"
        android:text="接收"
        android:textColor="#181818"
        android:textSize="10sp"
        android:visibility="invisible"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/cv_coin_menu" />

    <TextView
        android:id="@+id/tv_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="103dp"
        android:layout_marginEnd="90dp"
        android:gravity="center"
        android:text="同步冷钱包"
        android:textColor="#181818"
        android:textSize="10sp"
        android:visibility="invisible"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/cv_coin_menu" />

</android.support.constraint.ConstraintLayout>